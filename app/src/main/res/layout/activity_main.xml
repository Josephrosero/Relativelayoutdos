<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.aula_7.relativelayoutdos.MainActivity">


    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/app_name"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/app_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_above="@+id/app_name"
        android:layout_centerHorizontal="true"

        android:text="@string/app_2"

        android:background="@color/colorPrimaryDark"
        android:padding="10dp"

        />
    <TextView
        android:id="@+id/app_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:text="@string/app_3"

        android:background="@color/colorPrimaryDark"
        android:padding="10dp" />

    <TextView
        android:id="@+id/app_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/app_name"
        android:text="@string/app_4"

        android:background="@color/colorPrimaryDark"
        android:padding="10dp"

        />

</RelativeLayout>
